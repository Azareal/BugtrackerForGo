{{template "header.tmpl" . }}
<div class="rowblock">
	<div class="rowitem"><a>Create Issue</a></div>
</div>
<div class="rowblock">
	<form action="/issue/create/submit" method="post">
		<div class="formrow">
			<div class="formitem"><a>Issue Name</a></div>
			<div class="formitem"><input name="issue-name" type="text" placeholder="Issue Name" /></div>
		</div>
		<div class="formrow">
			<div class="formitem"><textarea name="issue-content" placeholder="Insert content here"></textarea></div>
		</div>
		<div class="formrow">
			<div class="formitem"><button name="issue-button" class="formbutton">Create Issue</div></div>
		</div>
	</form>
</div>
{{template "footer.tmpl" . }}